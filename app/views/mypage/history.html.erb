<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">分析履歴</h1>

  <% if @analyses.any? %>
    <div class="bg-white shadow-md rounded-lg overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">URL</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">結果</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">日時</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @analyses.each do |analysis| %>
            <tr>
            <!--URL-->
              <td class="px-6 py-4 whitespace-nowrap text-sm text-blue-600 hover:text-blue-800">
                <%= link_to truncate(analysis.url, length: 50), analysis.url, target: '_blank' %>
              </td>
            <!--結果-->
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <!--readable_resultメソッドを使用してJSONを日本語に変換-->
                <%= analysis.readable_result %>
              </td>
            <!--日時-->
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= analysis.created_at.strftime("%Y年%m月%d日 %H:%M") %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <%= paginate @analyses %>
  <% else %>
    <p class="text-gray-700">分析履歴がありません。</p>
  <% end %>
  <%= link_to 'メンバーページTOPに戻る', members_path, data: { turbo: false } %>
</div>